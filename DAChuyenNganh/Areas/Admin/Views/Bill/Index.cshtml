
@{
    ViewData["Title"] = "Bill management";
}
@section Scripts{
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="~/app/controllers/bill/index.js" asp-append-version="true"></script>
    <script>
        var billObj = new BillController();
        billObj.initialize();
    </script>
}
@section Styles{
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet" />
}
<input type="hidden" id="hid-category-id" value="0" />
<div class="">
    <div class="page-title">
        <div class="title_left" >
            <div class="col-md-7 col-sm-7 col-xs-12 form-group pull-left">
                <h3>Quản lý hóa đơn</h3>
            </div>
            <div class="col-md-5 col-sm-12  form-group pull-right">
                <button class="btn btn-success" id="btn-create" type="button">Tạo hóa đơn</button>
            </div>
        </div>

        <div class="title_right">

            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <input type="text" id="txtFromDate" class="form-control" placeholder="From Date">
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <input type="text" id="txtToDate" class="form-control" placeholder="To date">
            </div>
            <div class="col-md-2 col-sm-3 col-xs-12 form-group">
                <input type="text" id="txtSearchKeyword" class="form-control" placeholder="Tìm kiếm...">

            </div>
            <div class="col-md-2 col-sm-2 col-xs-12 form-group">
                <button class="btn btn-default" id="btn-search" type="button">Search!</button>
            </div>
            
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <table id="tbl-product" class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tên khách hàng</th>
                                <th>Phương thức thanh toán</th>
                                <th>Ngày đặt</th>
                                <th>Trạng thái</th>
                                <th>Nội dung</th>
                            </tr>
                        </thead>
                        <tbody id="tbl-content"></tbody>
                    </table>

                    <div class="row">
                        <div class="col-sm-6" style="margin-top:20px;">
                            <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                <select id="ddl-show-page">
                                    <option value="10" selected="selected">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                                <span class="item-per-page">
                                    Bản ghi/Trang.
                                </span>
                                Tổng số bản ghi: <strong id="lbl-total-records"></strong>
                            </div>
                        </div><div class="col-sm-6">
                            <div class="dataTables_paginate" id="datatable-checkbox_paginate">
                                <ul id="paginationUL"></ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <script id="table-template" type="x-tmpl-mustache">
        <tr>
            <td>{{Id}}</td>
            <td>{{CustomerName}}</td>
            <td>{{{PaymentMethod}}}</td>
            <td>{{{DateCreated}}}</td>
            <td>{{{BillStatus}}}</td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-warning dropdown-toggle btn-sm btn-view" type="button" id="dropdownMenu12" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-id="{{Id}}"><i class="fa fa-eye"></i></button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenu12">
                        <p>Chi tiết hóa đơn</p>
                        </div>
                </div>
        </td>
        </tr>
    </script>
</div>
<partial name="_DetailModal.cshtml"/>
@*@Html.Partial("_DetailModal.cshtml")*@