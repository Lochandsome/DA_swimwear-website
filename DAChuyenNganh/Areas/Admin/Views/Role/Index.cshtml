@using Microsoft.AspNetCore.Authorization
@using DAChuyenNganh.Authorization
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Role list";
}
@section Styles{
    <link href="~/lib/jquery-treegrid/css/jquery.treegrid.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/lib/jquery-treegrid/js/jquery.treegrid.js"></script>
    <script src="~/app/controllers/role/index.js" asp-append-version="true"></script>
    <script>
        var roleObj = new RoleController();
        roleObj.initialize();
    </script>
}
<div class="">
    <div class="page-title">
        <div class="title_left" style="padding-top:10px;">
            <div class="col-md-7 col-sm-7 col-xs-12 form-group pull-left">
                <h3>Quản lý quyền</h3>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right top_search">
                @{
                    var result = await AuthorizationService.AuthorizeAsync(User, "USER", Operations.Create);
                }
                @if (result.Succeeded)
                {
                    <button class="btn btn-success" id="btn-create" type="button">Thêm Vai Trò</button>
                }
                </div>
        </div>

        <div class="title_right" style="padding-right:20px;">

            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" id="txt-search-keyword" class="form-control" placeholder="Search...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" id="btn-search" type="button">Search!</button>
                    </span>
                </div>

            </div>

        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <table id="tbl-product" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tên Vai Trò</th>
                                <th>Nội Dung Vai Trò</th>
                                <th width="15%"></th>
                            </tr>
                        </thead>
                        <tbody id="tbl-content"></tbody>
                    </table>

                    <div class="row">
                        <div class="col-sm-6" style="margin-top:20px;">
                            <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                <select id="ddl-show-page">
                                    <option value="10" selected="selected">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                                <span class="item-per-page">
                                    Bản ghi/Trang.
                                </span>
                                Tổng Số Bản ghi : <strong id="lbl-total-records"></strong>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                                <ul id="paginationUL"></ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <script id="table-template" type="x-tmpl-mustache">
        <tr>
            <td>{{Name}}</td>
            <td>{{Description}}</td>
            <td>
         @if ((await AuthorizationService.AuthorizeAsync(User, "USER", Operations.Update)).Succeeded)
         {
                    <div class="dropdown">
                        <button class="btn btn-warning dropdown-toggle btn-sm btn-grant" type="button"id="dropdownMenu9" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-id="{{Id}}"><i class="fa fa-eye-slash"></i></button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu9">
                            <p>Phần quyền chức năng</p>
                            </div>
                    </div>
             }
          @if ((await AuthorizationService.AuthorizeAsync(User, "USER", Operations.Update)).Succeeded)
          {
                    <div class="dropdown" style="padding-right:20px">
                        <button class="btn btn-info dropdown-toggle btn-sm btn-edit" type="button"id="dropdownMenu10" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-id="{{Id}}"><i class="fa fa-pencil-square-o"></i></button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu10">
                            <p>Sửa quyền hạn</p>
                            </div>
                    </div>
          }
           @if ((await AuthorizationService.AuthorizeAsync(User, "USER", Operations.Update)).Succeeded)
           {
                    <div class="dropdown">
                        <button class="btn btn-danger dropdown-toggle btn-sm btn-delete" type="button"id="dropdownMenu11" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-id="{{Id}}"><i class="fa fa-trash-o"></i></button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu11">
                            <p>Xóa lớp quyền</p>
                            </div>
                    </div>
           }
            </td>
        </tr>
    </script>
</div>
<partial name="_AddEditModal.cshtml" />
<partial name="_AssignPermission.cshtml" />
@*@Html.Partial("_AddEditModal.cshtml")
    @Html.Partial("_AssignPermission.cshtml")*@