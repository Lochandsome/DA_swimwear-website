@using Microsoft.AspNetCore.Identity
@using DAChuyenNganh.Models
@using DAChuyenNganh.Extensions

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <img src="@User.GetSpecificClaim("Avatar")" alt="">@User.GetSpecificClaim("FullName")
    <span class=" fa fa-angle-down"></span>
</a>
<ul class="dropdown-menu dropdown-usermenu pull-right">    
    <li>
        <a href="javascript:;">
            <span class="badge bg-red pull-right">99%</span>
            <span>Trang chủ</span>
        </a>
    </li>  
    <li>
        <form action="/Admin/Account/Logout" method="post" id="logoutForm" class="navbar-right">
            <button type="submit" class="btn btn-link navbar-btn navbar-link">Thoát</button>
        </form>
    </li>
</ul>

