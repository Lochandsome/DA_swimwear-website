@using System.Linq
@model LoginViewModel
@inject SignInManager<AppUser> SignInManager
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Log in";
}
<!-- Breadcrumbs -->

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">@Localizer["Home"]</a><span>&raquo;</span></li>
                    <li><strong>@Localizer["Login"]</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="main container">
        <div class="page-content">
            <div class="account-login">
                <div class="box-authentication">
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <h4>@Localizer["Login"]</h4>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <p class="before-login-text">@Localizer["Welcomeback"]</p>
                        <label asp-for="Email" style="font-size:14px"></label>
                        <input type="text" asp-for="Email" class="form-control" style="font-size: 14px;">
                        <label asp-for="Password" style="font-size:14px"></label>
                        <input id="password_login" asp-for="Password" type="password" class="form-control" style="font-size: 14px;">
                        <p class="forgot-pass"><a asp-action="ForgotPassword">@Localizer["ForgotPassword"]</a></p>
                        <button type="submit" class="button">
                            <i class="icon-lock icons"></i>&nbsp; <span>@Localizer["Login"]</span>
                        </button>
                        <label class="inline" asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                        </label>
                    </form>

                    <section>
                        <h4>@Localizer["Useanotherservicetologin"]</h4>
                        <hr />
                        @{
                            var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
                            if (loginProviders.Count == 0)
                            {
                                <div>
                                    <p>
                                        Không có dịch vụ xác thực bên ngoài nào được định cấu hình. <a href="https://go.microsoft.com/fwlink/?LinkID=532715"></a>
                                        Chưa phát triển đăng nhập với facebook hoặc google
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                                    <div>
                                        <p>
                                            @foreach (var provider in loginProviders)
                                            {
                                                <button type="submit" class="btn btn-default" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.Name</button>
                                            }
                                        </p>
                                    </div>
                                </form>
                            }
                        }
                    </section>
                </div>
                <div class="box-authentication">
                    <h4>@Localizer["Register"]</h4>
                    <p>@Localizer["Createyourownaccount"]</p>

                    <button onclick="window.location.href='/register.html'" class="button"><i class="icon-user icons"></i>&nbsp; <span>@Localizer["Register"]</span></button>
                    <div class="register-benefits">
                        <h5>@Localizer["Registertodaytoenjoythediscount"]</h5>
                        <ul>
                            <li>@Localizer["Speedupthecheckoutprocess"]</li>
                            <li>@Localizer["Checkbillseasily"]</li>
                            <li>@Localizer["Recordallpurchases"]</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Main Container End -->

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
