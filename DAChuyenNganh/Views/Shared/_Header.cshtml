@inject IViewLocalizer Localizer
<header>
    <div class="header-container">
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-xs-12">
                        <!-- Default Welcome Message -->
                        <div class="welcome-msg hidden-xs hidden-sm">@Localizer["Welcome"]</div>
                        @await Html.PartialAsync("_SelectLanguagePartial")
                        <!-- Language &amp; Currency wrapper -->
                        <div class="language-currency-wrapper">
                            <div class="inner-cl">
                                <div class="block block-currency">
                                    <div class="item-cur"><span>USD</span><i class="fa fa-angle-down"></i></div>
                                    <ul>
                                        <li><a href="#"><span class="cur_icon">€</span>EUR</a></li>
                                        <li><a href="#"><span class="cur_icon">¥</span>JPY</a></li>
                                        <li><a class="selected" href="#"><span class="cur_icon">$</span>USD</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- top links -->
                    <div class="headerlinkmenu col-md-6 col-sm-6 col-xs-12" style="padding-top:4px">
                        <span class="phone  hidden-xs hidden-sm">@Localizer["Hotline"]</span>
                        <ul class="links">
                            <li class="hidden-xs"><a title="Help Center" href="#"><span>@Localizer["HelpCenter"]</span></a></li>
                            <!--
                                <li><a title="Store Locator" href="#"><span>Store Locator</span></a></li>
                            <li><a title="Checkout" href="checkout.html"><span>Checkout</span></a></li>
                            -->
                            @if (User.Identity.IsAuthenticated)
                            {

                                <li>
                                    <div class="dropdown">
                                        <a class="current-open" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>@User.GetSpecificClaim("FullName")</span> <i class="fa fa-angle-down"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="/accountInformation.html">@Localizer["Account"]</a></li>
                                            <li><a href="#">@Localizer["Whislist"]</a></li>
                                            <li><a href="/checkout.html">@Localizer["Payment"]</a></li>
                                        </ul>
                                    </div>
                                </li>
                                <li>
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                        <a href="#" onclick="document.getElementById('logoutForm').submit()"><span>@Localizer["Exit"]</span></a>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li><a title="login" href="/login.html"><span>@Localizer["Login"]</span></a></li>
                                <li><a title="register" href="/register.html"><span>@Localizer["Register"]</span></a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- header inner -->
        <div class="header-inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3 col-xs-12 jtv-logo-block">

                        <!-- Header Logo -->
                        <div class="logo"><a title="e-commerce" href="/"><img width="200" height="80" alt="ShopMart" title="ShopMart" src="/client-side/images/logopan.png"></a> </div>
                    </div>
                    <div class="col-xs-12 col-sm-5 col-md-6 jtv-top-search">

                        <!-- Search -->

                        <div class="top-search">
                            <div id="search">
                                <form method="get" action="/search.html">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Nhập tên sản phẩm của bạn..." name="keyword">
                                        <button class="btn-search" type="submit"><i class="fa fa-search"></i></button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- End Search -->

                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-3 top-cart">
                        <div class="link-wishlist"> <a href="#"> <i class="icon-heart icons"></i><span>@Localizer["Wishlist"]</span></a> </div>
                        <!-- top cart -->
                        <div class="top-cart-contain">
                            <vc:header-cart></vc:header-cart>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>